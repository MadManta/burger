<h1>eat da burgo</h1>

<h2>uneaten</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burgers/burg-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>eaten</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
      {{> burgers/burg-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="add">add burger</button>
</form>
